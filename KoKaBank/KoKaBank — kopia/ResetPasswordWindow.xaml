<Window x:Class="KoKaBank.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoKaBank"
        mc:Ignorable="d"
        Title="Resetuj Hasło" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Numer klienta:"/>
            <TextBox x:Name="ClientIdBox" Margin="0,5,0,10"/>

            <TextBlock Text="Nowe hasło:"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,5,0,10"/>

            <Button Content="Zmień hasło" Click="ChangePassword_Click"/>
            <TextBlock x:Name="ResetMessage" Margin="10" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
