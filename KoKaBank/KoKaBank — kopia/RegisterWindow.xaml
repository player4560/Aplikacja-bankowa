<Window x:Class="KoKaBank.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja" Height="500" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Login - Numer klienta -->
            <!-- Login - Numer klienta -->
            <TextBlock Text="Numer klienta"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>

            <!-- Hasło -->
            <TextBlock Text="Hasło" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="0,0,0,10"/>

            <!-- Imię i nazwisko -->
            <TextBlock Text="Imię i nazwisko" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Width="200" Margin="0,0,0,10"/>

            <!-- Imię i nazwisko -->
            <TextBlock Text="Obywatelstwo" Margin="0,0,0,5"/>
            <TextBox x:Name="NationalityTextBox" Width="200" Margin="0,0,0,10"/>


            <!-- numer pesel -->
            <TextBlock Text="PESEL" Margin="0,0,0,5"/>
            <TextBox x:Name="PeselTextBox" Width="200" Margin="0,0,0,10"/>

            <!-- dowod osobisty -->
            <TextBlock Text="Seria i numer dowodu osobistego" Margin="0,0,0,5"/>
            <TextBox x:Name="IDTextBox" Width="200" Margin="0,0,0,10"/>

            

            <!-- Przycisk rejestracji -->
            <Button Content="Zarejestruj" Width="200" Click="RegisterButton_Click" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>