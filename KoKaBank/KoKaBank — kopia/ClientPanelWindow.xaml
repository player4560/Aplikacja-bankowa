<Window x:Class="KoKaBank.ClientPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoKaBank"
        mc:Ignorable="d"
        Title="Panel Klienta" Height="400" Width="600">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nagłówek -->
            <RowDefinition Height="Auto"/>
            <!-- Tabela -->
            <RowDefinition Height="Auto"/>
            <!-- Przycisk -->
            <RowDefinition Height="Auto"/>
            <!-- Przycisk Wykonaj przelew-->
            <RowDefinition Height="Auto"/>
            <!-- Przycisk Wykonaj przelew-->
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="WelcomeText" FontSize="16" FontWeight="Bold" />
            <TextBlock Text="Saldo konta:"/>
            <TextBlock x:Name="BalanceText" FontSize="14" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Lista transakcji -->
        <DataGrid x:Name="TransactionList"
                  Grid.Row="1"
                  Height="100"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Margin="0,0,0,100">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Kwota" Binding="{Binding Amount, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Saldo po" Binding="{Binding BalanceAfter, StringFormat=N2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Przycisk wyloguj -->
        <Button Grid.Row="2"
                Content="Wyloguj"
                Margin="20"
                Width="100"
                HorizontalAlignment="Right"
                Click="Logout_Click"/>
        <!-- Przycisk dla przelwu -->
        <Button Grid.Row="1"
        Content="Wykonaj przelew zewnętrzny"
        Margin="0,119,0,61"
        Width="200"
        HorizontalAlignment="Left"
        Click="Transfer_Click"/>

        <!-- przycisk informacje do edycji -->
        <Button Grid.Row="1"
         Content="Pokaż dane konta"
        Margin="0,152,0,26"
        Width="200"
        HorizontalAlignment="Left"
        Click="ShowAccountInfo_Click"/>
    </Grid>
</Window>
